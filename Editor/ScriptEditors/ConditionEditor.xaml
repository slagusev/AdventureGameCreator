<Window x:Class="Editor.ScriptEditors.ConditionEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Editor.Editors"
        
        Title="If...Then...Else..." Height="500" Width="500" DataContext="{Binding TestCondition1, Source={StaticResource TestDataStatic}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
    <TabControl>
        <TabItem Header="If...">
            
        </TabItem>
        <TabItem Header="Then...">
                <Controls:ScriptControl DataContext="{Binding ThenStatement}"></Controls:ScriptControl>
            </TabItem>
        <TabItem Header="Else...">
                <Controls:ScriptControl DataContext="{Binding ElseStatement}"></Controls:ScriptControl>
            </TabItem>
        </TabControl>
        <Button HorizontalAlignment="Center" Width="100" Grid.Row="1" Margin="10" Click="Button_Click_1">OK</Button>
    </Grid>
</Window>
