<Window x:Class="Editor.ScriptEditors.Comment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Editors="clr-namespace:Editor.Editors"
        Title="Comment" Height="161" Width="300" DataContext="{Binding TestComment, Source={StaticResource TestDataStatic}}">
    <Grid>
        <StackPanel Margin="-10,10,10,-10">
            <TextBlock Margin="10">Please enter the text for your comment:</TextBlock>
            <TextBox Margin="10" Text="{Binding CommentText}"></TextBox>
            <Button HorizontalAlignment="Center" Width="100" Click="Button_Click_1">OK</Button>
        </StackPanel>
    </Grid>
</Window>
