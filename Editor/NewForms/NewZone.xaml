<Window x:Class="Editor.NewForms.NewZone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Zone" Height="190" Width="488" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" KeyDown="Window_KeyUp_1">
    <Grid>
        <TextBlock Margin="50,30">Please enter a name for the new zone:</TextBlock>
        <TextBox Name="txtName" Height="25" Margin="50,0"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,70,0,0">
            <Button Margin="20" Width="100" Height="25" Click="Button_Click_1">OK</Button>
            <Button Margin="20" Width="100" Height="25" Click="Button_Click_2">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
